// // //     ‚îú‚îÄ‚îÄ App.jsx
// // //     ‚îú‚îÄ‚îÄ data/
// // //     ‚îÇ   ‚îî‚îÄ‚îÄ products.js
// // //     ‚îú‚îÄ‚îÄ store/
// // //     ‚îÇ   ‚îî‚îÄ‚îÄ Store.jsx
// // //     ‚îú‚îÄ‚îÄ styles/
// // //     ‚îÇ   ‚îî‚îÄ‚îÄ global.css
// // //     ‚îú‚îÄ‚îÄ components/
// // //     ‚îÇ   ‚îú‚îÄ‚îÄ Header.jsx
// // //     ‚îÇ   ‚îú‚îÄ‚îÄ Carousel.jsx
// // //     ‚îÇ   ‚îú‚îÄ‚îÄ ProductCard.jsx
